{
  "name": "obsidian-mcp-rest",
  "version": "1.1.2",
  "description": "MCP server implementation for accessing Obsidian via local REST API",
  "main": "dist/index.js",
  "bin": {
    "mcp-obsidian": "./dist/cli.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json && shx chmod +x dist/cli.js",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "start": "node dist/cli.js",
    "start:dev": "bun run src/cli.ts",
    "docker:build": "yarn docker:latest && yarn docker:bun",
    "docker:latest": "docker build -t mcp/obsidian:latest -f Dockerfile .",
    "docker:bun": "docker build -t mcp/obsidian:bun -f Dockerfile.bun .",
    "checks:knip": "knip",
    "checks:format": "biome format --write --no-errors-on-unmatched",
    "checks:lint": "biome lint --no-errors-on-unmatched",
    "release": "release-it -VV",
    "docker:wsl:run": "DEBUG=mcp:\\* API_HOST=https://$WSL_GATEWAY_IP docker run --name mcp-obsidian -e DEBUG -e API_KEY -e API_HOST --rm -i mcp/obsidian:bun",
    "mcp:inspector:docker": "bunx @modelcontextprotocol/inspector -e DEBUG=mcp:\\* -e API_KEY=$API_KEY -e API_HOST=https://$WSL_GATEWAY_IP docker run --name mcp-obsidian --env DEBUG --env API_KEY --env API_HOST --rm -i mcp/obsidian:bun",
    "mcp:inspector:local": "bunx @modelcontextprotocol/inspector -e DEBUG=mcp:\\* -e API_KEY=$API_KEY -e API_HOST=https://$WSL_GATEWAY_IP bun run src/cli.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "axios": "^1.9.0",
    "axios-debug-log": "^1.0.0",
    "axios-retry": "^4.5.0",
    "debug": "^4.4.1",
    "dotenv-expand": "^12.0.2",
    "json5": "^2.2.3",
    "ts-dedent": "^2.2.0",
    "typescript": "^5.8.3",
    "yargs": "^17.7.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.15.19",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^3.1.3",
    "auto-changelog": "^2.5.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-vinyl": "^2.5.4",
    "eslint": "^9.27.0",
    "knip": "^5.56.0",
    "nock": "^14.0.4",
    "release-it": "^19.0.2",
    "shx": "^0.4.0",
    "vitest": "^3.1.3"
  },
  "files": [
    "dist",
    "config.secured.jsonc",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PublikPrinciple/obsidian-mcp-rest.git"
  },
  "keywords": [
    "obsidian",
    "mcp",
    "rest-api",
    "claude"
  ],
  "author": "PublikPrinciple",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PublikPrinciple/obsidian-mcp-rest/issues"
  },
  "homepage": "https://github.com/PublikPrinciple/obsidian-mcp-rest#readme",
  "volta": {
    "node": "22.12.0",
    "yarn": "4.9.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-vinyl"
    }
  },
  "packageManager": "yarn@4.9.1"
}
