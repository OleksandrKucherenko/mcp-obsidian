{
  "name": "obsidian-mcp-rest",
  "version": "1.0.0",
  "description": "MCP server implementation for accessing Obsidian via local REST API",
  "main": "dist/index.js",
  "bin": "./dist/cli.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "prepare": "tsc",
    "test": "vitest run --passWithNoTests",
